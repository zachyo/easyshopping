# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=easy_shopping
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# OnePipe API Configuration
ONEPIPE_API_URL=https://api.onepipe.io
ONEPIPE_API_KEY=your_onepipe_api_key_here
ONEPIPE_CLIENT_SECRET=your_onepipe_client_secret_here
ONEPIPE_WEBHOOK_SECRET=your_webhook_secret_here
ONEPIPE_MOCK_MODE=true

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# File Upload (Optional - Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Platform Settings
PLATFORM_FEE_PERCENTAGE=2.0
MAX_BACKUP_ACCOUNTS=3
